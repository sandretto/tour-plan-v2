@model IQueryable<Hotel>
@{
    string strTitle = "Admin panel";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <h3>Hotels</h3>
        <div class="div-box">
            <a asp-area="Admin" asp-controller="Hotel" asp-action="Edit" asp-route-id="">Add hotel</a>
        </div>
        @if (Model.Any())
        {
            <div>
                @foreach (Hotel entity in Model)
                {
                    <div>
                        <a asp-area="Admin" asp-controller="Hotel" asp-action="Edit" asp-route-id="@entity.Id">edit</a>
                        <form 
                              id="form-@entity.Id" 
                              asp-area="Admin" 
                              asp-controller="Hotel" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@entity.Id">
                            @*<a href="#" onclick="document.getElementById('form-@entity.Id').submit();">delete</a>*@
                        </form>
                        <a asp-area="" asp-controller="Hotel" asp-action="Index" asp-route-id="@entity.Id">
                            @($"{entity.Name}")
                        </a>
                    </div>
                }
            </div>
        }
    </div>
    @*<div>
        <h3>Edit pages</h3>
        <a asp-area="Admin" asp-controller="Hotels" asp-action="Edit">Hotels</a>
        <a asp-area="Admin" asp-controller="Activities" asp-action="Edit">Activities</a>
        <a asp-area="Admin" asp-controller="Reviews" asp-action="Edit">Reviews</a>
    </div>*@
    <div>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Log out" />
        </form>
    </div>
</div>


